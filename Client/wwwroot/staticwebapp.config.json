{
  "routes": [
    {
      "route": "/admin/*",
      "allowedRoles": [ "admin" ]
    },
    {
      "route": "/api/pagetext",
      "methods": [ "POST" ],
      "allowedRoles": [ "admin" ]
    },
    {
      "route": "/api/services",
      "methods": [ "POST" ],
      "allowedRoles": [ "admin" ]
    },
    {
      "route": "/api/blob/sas",
      "methods": [ "POST" ],
      "allowedRoles": [ "admin" ]
    },
    {
      "route": "/login",
      "rewrite": "/login.html"
    },
    {
      "route": "/api/customer-content",
      "methods": [ "GET", "POST" ],
      "allowedRoles": [ "admin" ]
    },
    {
      "route": "/api/customer-content/*",
      "methods": [ "DELETE", "POST", "GET" ],
      "allowedRoles": [ "admin" ]
    },
    {
      "route": "/api/customer-content/purge",
      "methods": [ "POST" ],
      "allowedRoles": [ "admin" ]
    }
  ],
  "navigationFallback": { "rewrite": "index.html" },
  "responseOverrides": {
    "401": {
      "redirect": "/login",
      "statusCode": 302
    },
    "403": {
      "rewrite": "/not-authorized.html",
      "statusCode": 403
    }
  }
}
